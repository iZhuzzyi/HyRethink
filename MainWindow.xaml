<Window x:Class="HyRethink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HyRethink"
        xmlns:vm="clr-namespace:HyRethink.ViewModels"
        mc:Ignorable="d"
        Title="HyRethink" Height="935" Width="900"
        Style="{StaticResource AeroWindowStyle}"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AeroWindowBackgroundBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Top Glass Bar -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="30"/>
            <!-- Bottom Status Bar -->
        </Grid.RowDefinitions>

        <!-- Red Swoosh Background Graphic (Spanning Rows 1 and 2) -->
        <Grid Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Bottom" Height="200" Margin="0,0,0,30">
            <!-- Reflection/Highlight on Swoosh -->
        </Grid>

        <!-- Top Glass Bar with Tabs -->
        <Border Grid.Row="0" Background="{StaticResource AeroHeaderBrush}" BorderBrush="{StaticResource AeroBorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <!-- Sidebar Width Placeholder -->
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Window Controls Placeholder -->
                </Grid.ColumnDefinitions>

                <!-- Sheen overlay (moved from tabs to the header layer) -->
                <Border Grid.ColumnSpan="3" Background="{StaticResource AeroHeaderOverlayBrush}" Opacity="1" IsHitTestVisible="False"/>

                <!-- Logo/Title Area -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="17,0,0,0">
                    <Image
                           Height="49"
                           Width="56"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           UseLayoutRounding="True"
                           SnapsToDevicePixels="True"
                           Source="Resources/HyRethinkLogo.png"
                           RenderTransformOrigin="0.498,0.483"/>
                    <TextBlock
                               Text="HyRethink"
                               Foreground="{StaticResource AeroTextBrush}"
                               FontSize="16"
                               FontWeight="SemiBold" FontFamily="Segoe UI" Width="78" Height="21"/>
                </StackPanel>

                <!-- Tabs -->
                <TabControl Grid.Column="1" Style="{StaticResource AeroTabControlStyle}" Background="Transparent" BorderThickness="0" Margin="0,-1,0,0">
                    <TabItem Header="媒体" Style="{StaticResource AeroTabItemStyle}" FontFamily="Segoe UI" FontSize="24"/>
                    <TabItem Header="操作" Style="{StaticResource AeroTabItemStyle}" FontFamily="Segoe UI" FontSize="24"/>
                    <TabItem Header="任务" Style="{StaticResource AeroTabItemStyle}" FontFamily="Segoe UI" FontSize="24"/>
                    <TabItem Header="队列" Style="{StaticResource AeroTabItemStyle}" FontFamily="Segoe UI" FontSize="24"/>
                </TabControl>

                <!-- Window Controls (Simulated for visual completeness if needed, or rely on system if frame was kept) -->
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource AeroSidebarBrush}" BorderBrush="{StaticResource AeroBorderBrush}" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <TextBlock Text="快速任务" Foreground="#AAFFFFFF" Margin="0,10,0,5" FontWeight="Bold"/>
                    <Button Content="创建新光盘" HorizontalContentAlignment="Left" Padding="10,5" Background="Transparent" Foreground="White" BorderThickness="0" Margin="0,2"/>
                    <Button Content="打开现有项目" HorizontalContentAlignment="Left" Padding="10,5" Background="Transparent" Foreground="White" BorderThickness="0" Margin="0,2"/>
                    <Button Content="最近文件" HorizontalContentAlignment="Left" Padding="10,5" Background="Transparent" Foreground="White" BorderThickness="0" Margin="0,2"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50,0,0">
                    <TextBlock Text="欢迎使用 HyRethink" 
                               Foreground="White" 
                               FontSize="32" 
                               HorizontalAlignment="Left" 
                               Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="1. 创建 VPD 与光盘选集功能。" Foreground="#DDFFFFFF" FontSize="16" Margin="0,5"/>
                    <TextBlock Text="2. 用这个你与光盘更选集开启。" Foreground="#DDFFFFFF" FontSize="16" Margin="0,5"/>

                    <!-- Icons Row -->
                </StackPanel>

                <!-- Big Power Button (Bottom Right) -->
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource AeroFooterBrush}" BorderBrush="{StaticResource AeroBorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Inner Highlight -->
                <Border Grid.ColumnSpan="2" BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0" VerticalAlignment="Top" Height="1"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="新闻" Foreground="{StaticResource AeroTextBrush}" Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource AeroTextBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
