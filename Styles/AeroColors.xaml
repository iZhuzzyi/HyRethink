<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Aero Palette -->
    <Color x:Key="AeroWindowGlassColor">#FF000000</Color>
    <Color x:Key="AeroWindowColor">#FF050A14</Color>
    <Color x:Key="AeroBorderColor">#FF2A3B55</Color>

    <SolidColorBrush x:Key="AeroBorderBrush" Color="{StaticResource AeroBorderColor}"/>
    
    <!-- Main Window Background (integrated from Designs/HyRethink.xaml) -->
    <!-- Use a normalized (0..1) geometry + RelativeToBoundingBox so the brush always fills the window -->
    <DrawingBrush x:Key="AeroWindowBackgroundBrush"
                  Stretch="Fill"
                  Viewbox="0,0,1,1"
                  ViewboxUnits="RelativeToBoundingBox">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <GeometryDrawing Geometry="F1 M 0,0 L 1,0 L 1,1 L 0,1 Z">
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush RadiusX="0.5" RadiusY="0.780443" Center="0.5,0.5" GradientOrigin="0.5,0.5">
                                <RadialGradientBrush.GradientStops>
                                    <GradientStop Color="#FF233980" Offset="0"/>
                                    <GradientStop Color="#FF201D48" Offset="1"/>
                                </RadialGradientBrush.GradientStops>
                                <RadialGradientBrush.RelativeTransform>
                                    <TransformGroup/>
                                </RadialGradientBrush.RelativeTransform>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                    </GeometryDrawing>
                    <GeometryDrawing Geometry="F1 M 0,0 L 1,0 L 1,1 L 0,1 Z">
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush RadiusX="0.945" RadiusY="0.909215" Center="0.5,-0.0682655" GradientOrigin="0.5,-0.0682655">
                                <RadialGradientBrush.GradientStops>
                                    <GradientStop Color="#00000000" Offset="0"/>
                                    <GradientStop Color="#11FFFFFF" Offset="0.705972"/>
                                    <GradientStop Color="#00000000" Offset="0.718224"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </RadialGradientBrush.GradientStops>
                                <RadialGradientBrush.RelativeTransform>
                                    <TransformGroup/>
                                </RadialGradientBrush.RelativeTransform>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                    </GeometryDrawing>
                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- Content Area Background -->
    <SolidColorBrush x:Key="AeroContentBackgroundBrush" Color="Transparent"/>

    <!-- Header/Top Bar Brush (from Designs/TopBar.xaml gradient -->
    <LinearGradientBrush x:Key="AeroHeaderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF05090E" Offset="0"/>
        <GradientStop Color="#FF171E3A" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Sidebar Brush (Dark Glass) -->
    <LinearGradientBrush x:Key="AeroSidebarBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#44000000" Offset="0"/>
        <GradientStop Color="#22000000" Offset="0.9"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <!-- Footer Brush -->
    <LinearGradientBrush x:Key="AeroFooterBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2B4568" Offset="0"/>
        <GradientStop Color="#FF1A2E4D" Offset="0.5"/>
        <GradientStop Color="#FF0F1C30" Offset="1"/>
    </LinearGradientBrush>

    <!-- Tab/Button Normal Brush (Glassy) -->
    <LinearGradientBrush x:Key="AeroTabNormalBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#33FFFFFF" Offset="0"/>
        <GradientStop Color="#11FFFFFF" Offset="0.49"/>
        <GradientStop Color="#05FFFFFF" Offset="0.5"/>
        <GradientStop Color="#08FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Header overlay sheen (reuses the former tab glass texture) -->
    <LinearGradientBrush x:Key="AeroHeaderOverlayBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#33FFFFFF" Offset="0"/>
        <GradientStop Color="#11FFFFFF" Offset="0.39"/>
        <GradientStop Color="#05FFFFFF" Offset="0.4"/>
        <GradientStop Color="#08FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Tab/Button Selected Brush (Cyan/Blue Glass) -->
    <LinearGradientBrush x:Key="AeroTabSelectedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF00C3FF" Offset="1"/>
        <GradientStop Color="#00007ACC" Offset="0.6"/>
    </LinearGradientBrush>
    
    <!-- Tab/Button Hover Brush -->
    <LinearGradientBrush x:Key="AeroTabHoverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#66FFFFFF" Offset="0"/>
        <GradientStop Color="#33FFFFFF" Offset="0.49"/>
        <GradientStop Color="#11FFFFFF" Offset="0.5"/>
        <GradientStop Color="#22FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="AeroTextBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="AeroTextDisabledBrush" Color="#FF888888"/>
    
    <!-- Glow Effects -->
    <RadialGradientBrush x:Key="AeroGlowBrush" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="#8800BFFF" Offset="0"/>
        <GradientStop Color="#0000BFFF" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Separator Brush -->
    <LinearGradientBrush x:Key="AeroSeparatorBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00FFFFFF" Offset="0"/>
        <GradientStop Color="#88FFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Red Swoosh Gradient -->
    <LinearGradientBrush x:Key="AeroRedSwooshBrush" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#CCFF0000" Offset="0"/>
        <GradientStop Color="#AA800000" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
