<UserControl x:Class="HyRethink.Views.MediaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HyRethink.Views"
             xmlns:vm="clr-namespace:HyRethink.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent"
             AllowDrop="True"
             Drop="UserControl_Drop">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/HyRethink;component/Styles/MediaStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 媒体页面 - 媒体管理和浏览功能 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 顶部工具栏 -->
            <RowDefinition Height="*"/>    <!-- 中间内容区 -->
            <RowDefinition Height="200"/>  <!-- 底部信息区 -->
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="{StaticResource MediaBarGlassBrush}" BorderBrush="#33FFFFFF" BorderThickness="0,0,0,1" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding AddFileCommand}" Style="{StaticResource MediaToolbarButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/AddMedia.png" Width="32" Height="32" Margin="0,0,5,0"/>
                        <TextBlock Text="添加文件" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding AddFolderCommand}" Style="{StaticResource MediaToolbarButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/AddFolder.png" Width="32" Height="32" Margin="0,0,5,0"/>
                        <TextBlock Text="添加文件夹" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>
                
                <Rectangle Width="1" Height="20" Fill="#33FFFFFF" Margin="5,0"/>
                
                <Button Command="{Binding RemoveCommand}" Style="{StaticResource MediaToolbarButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/RedCross.png" Width="32" Height="32" Margin="0,0,5,0"/>
                        <TextBlock Text="删除" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>
                
                <Rectangle Width="1" Height="20" Fill="#33FFFFFF" Margin="5,0"/>
                
                <Button Command="{Binding ClearCommand}" Style="{StaticResource MediaToolbarButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/TrashBin.png" Width="32" Height="32" Margin="0,0,5,0"/>
                        <TextBlock Text="清空" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- 中间内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/> <!-- 左侧缩略图列表 -->
                <ColumnDefinition Width="*"/>   <!-- 右侧详细列表 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧缩略图列表 -->
            <Border Grid.Column="0" Panel.ZIndex="1" BorderBrush="#33FFFFFF" BorderThickness="0,0,1,0" Background="#0DFFFFFF">
                <ListBox ItemsSource="{Binding MediaItems}"
                         SelectedItem="{Binding SelectedMediaItem}"
                         Background="Transparent" 
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ItemContainerStyle="{StaticResource MediaListBoxItemStyle}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="110" ItemHeight="110"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="100" Height="100" Margin="5">
                                <!-- 缩略图占位符 -->
                                <Border Width="90" Height="60" Background="#33000000" BorderBrush="#66FFFFFF" BorderThickness="1" CornerRadius="2" Margin="0,0,0,5">
                                    <TextBlock Text="缩略图" Foreground="#66FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding Name}" Foreground="White" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" ToolTip="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- 右侧详细列表 -->
            <ListView Grid.Column="1"
                      Margin="0,0,0,0"
                      ItemsSource="{Binding MediaItems}"
                      SelectedItem="{Binding SelectedMediaItem}"
                      Background="Transparent"
                      BorderThickness="0"
                      Padding="0"
                      SnapsToDevicePixels="True"
                      Foreground="White"
                      ItemContainerStyle="{StaticResource MediaListViewItemStyle}">
                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource MediaListViewHeaderStyle}">
                        <GridViewColumn Header="名称" Width="200" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="格式" Width="60" DisplayMemberBinding="{Binding Format}"/>
                        <GridViewColumn Header="大小" Width="80" DisplayMemberBinding="{Binding Size}"/>
                        <GridViewColumn Header="持续时间" Width="80" DisplayMemberBinding="{Binding Duration}"/>
                        <GridViewColumn Header="分辨率" Width="100" DisplayMemberBinding="{Binding Resolution}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- 底部信息区 -->
        <Border Grid.Row="2" Background="#CC000000" BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/> <!-- 视频预览 -->
                    <ColumnDefinition Width="*"/>   <!-- 详细信息 -->
                </Grid.ColumnDefinitions>

                <!-- 视频预览占位符 -->
                <Border Grid.Column="0" Background="Black" BorderBrush="#33FFFFFF" BorderThickness="1" Margin="0,0,10,0">
                    <Grid>
                        <TextBlock Text="视频预览区域" Foreground="#66FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <!-- 播放控制条占位 -->
                        <StackPanel VerticalAlignment="Bottom" Background="#80000000" Height="30" Orientation="Horizontal">
                            <TextBlock Text="▶" Foreground="White" Margin="10,0" VerticalAlignment="Center"/>
                            <Slider Width="200" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 详细信息表单 -->
                <Grid Grid.Column="1" DataContext="{Binding SelectedMediaItem}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="视频：" Foreground="White" Margin="0,5,10,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Foreground="White" Margin="0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="格式：" Foreground="White" Margin="0,5,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Format}" Foreground="White" Margin="0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="音频：" Foreground="White" Margin="0,5,10,5"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,2" IsEnabled="False" Text="默认音频流" Style="{StaticResource AeroComboBoxStyle}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="音效：" Foreground="White" Margin="0,5,10,5"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,2" IsEnabled="False" Text="正常" Style="{StaticResource AeroComboBoxStyle}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="字幕节目：" Foreground="White" Margin="0,5,10,5"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,2" IsEnabled="False" Text="正常" Style="{StaticResource AeroComboBoxStyle}"/>

                    <!-- 右侧列 -->
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="名称：" Foreground="White" Margin="0,5,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding Name}" Margin="0,2" Background="#33000000" Foreground="White" BorderBrush="#66FFFFFF" Style="{StaticResource AeroTextBoxStyle}"/>

                    <TextBlock Grid.Row="1" Grid.Column="3" Text="地址：" Foreground="White" Margin="0,5,10,5"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding FilePath}" Margin="0,2" Background="#33000000" Foreground="White" BorderBrush="#66FFFFFF" IsReadOnly="True" Style="{StaticResource AeroTextBoxStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="3" Text="分辨率：" Foreground="White" Margin="0,5,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding Resolution}" Margin="0,2" Background="#33000000" Foreground="White" BorderBrush="#66FFFFFF" IsReadOnly="True" Style="{StaticResource AeroTextBoxStyle}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
